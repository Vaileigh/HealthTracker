<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<AnchorPane prefHeight="700.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HealthTracker.DataDisplayController">
        <AnchorPane fx:id="banner" prefHeight="64.0" prefWidth="400.0" style="-fx-background-color: black;" BorderPane.alignment="CENTER">
                <Text fx:id="title" fill="#ff660e" layoutX="14.0" layoutY="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="TRACK">
                    <font>
                        <Font name="System Bold Italic" size="33.0" />
                    </font>
                </Text>
                <Text fx:id="page_name" fill="WHITE" layoutX="203.0" layoutY="41.0" strokeType="OUTSIDE" strokeWidth="0.0" text="YOUR DATA">
                    <font>
                        <Font name="System Bold" size="25.0" />
                    </font>
                </Text>
        </AnchorPane>
        <Text fx:id="custom" fill="BLACK" layoutX="110" layoutY="90" strokeType="OUTSIDE" strokeWidth="0.0" text="Your summary for ">
            <font>
                <Font name="System" size="12.0" />
            </font>
        </Text>
        <ComboBox fx:id="rng_cbx" value="today" layoutX="210" layoutY="75" onAction="#timeChange">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="today"/>
                    <String fx:value="this week"/>
                </FXCollections>
            </items>
        </ComboBox>
        <Text fx:id="cal_txt" fill="BLACK" layoutX="110" layoutY="120" strokeType="OUTSIDE" strokeWidth="0.0" text="Your calorie summary for today">
            <font>
                <Font name="System" size="12.0"/>
            </font>
        </Text>
        <ProgressBar fx:id="pb" progress="0" layoutX="142" layoutY="130"/>
        <Text fx:id="cal_prog" text="" layoutX="175" layoutY="160">
            <font>
                <Font name="System" size = "12.0"/>
            </font></Text>
        <Text fx:id="warning" text="" layoutX="115" layoutY="172">
            <font>
                <Font name="System" size = "12.0"/>
            </font>
        </Text>
        <Button fx:id="cal_btn" text="Record Calories" layoutX="143" layoutY="180" onAction="#redirectCal"/>
        <Separator fx:id="sep" prefWidth="400" layoutY="225"/>
        <Text fx:id="ex_txt" text="Your exercise summary for today" layoutX="110" layoutY="245">
            <font>
                <Font name="System" size = "12.0"/>
            </font>
        </Text>
        <Text fx:id="noexdata" text="No data to display :(" layoutX="110" layoutY="325" fill="darkgray">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Text>
        <ImageView fx:id="ex_chart_display" layoutY="250"/>
        <Button fx:id="swap_btn" text="View Distribution" layoutX="143" layoutY="460" onAction="#swapCharts"/>
        <Button fx:id="ex_btn" text="Record Exercise" layoutX="143" layoutY="490" onAction="#redirectEx"/>
</AnchorPane>